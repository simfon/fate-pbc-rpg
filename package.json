{
  "name": "fate-pbc-rpg",
  "version": "1.0.0",
  "description": "GdR Play-By-Chat ispirato a Fate Accelerated",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:css && tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "db:init": "tsx src/db/init.ts",
    "build:css": "tailwindcss -i src/styles/tailwind.css -o public/css/site.css --minify",
    "postinstall": "tailwindcss -i src/styles/tailwind.css -o public/css/site.css || true && node ./scripts/copy-htmx.js || true",
    "db:init:prod": "node dist/db/init.js"
  },
  "keywords": [
    "rpg",
    "play-by-chat",
    "fate"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "dotenv": "^17.2.3",
    "htmx.org": "^1.9.10",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/node": "^22.10.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
