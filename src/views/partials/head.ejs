<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Cronache del Destino</title>
<% if (process.env.NODE_ENV !== 'production') { %>
  <script src="https://cdn.tailwindcss.com"></script>
<% } %>
<link rel="stylesheet" href="/css/site.css">
<script src="/js/htmx.min.js"></script>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">
<% if (process.env.NODE_ENV !== 'production') { %>
  <script>
    if (typeof tailwind !== 'undefined') {
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              parchment: '#f4e4bc',
              ink: '#2c1810',
              gold: '#c9a227',
              blood: '#8b0000',
              midnight: '#1a1a2e',
              mist: '#e8e4e0',
            },
            fontFamily: {
              title: ['Cinzel', 'serif'],
              body: ['Crimson Text', 'serif'],
            }
          }
        }
      };
    }
  </script>
<% } %>
<style>
  body {
    background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #1a1a2e 100%);
    min-height: 100vh;
  }
  .parchment-bg {
    background: linear-gradient(180deg, #f4e4bc 0%, #e8d4a8 100%);
  }
  .message-destiny {
    background: linear-gradient(135deg, #2c1810 0%, #1a1a2e 100%);
    color: #c9a227;
    border-left: 4px solid #c9a227;
  }
  .message-action-intent {
    background: linear-gradient(135deg, #1e3a5f 0%, #1a2d4a 100%);
    color: #7dd3fc;
    border-left: 4px solid #38bdf8;
  }
  .message-action {
    font-style: italic;
    color: #4a5568;
  }
  .message-ooc {
    background: #e2e8f0;
    font-size: 0.875rem;
  }
  .scroll-shadow {
    box-shadow: inset 0 -20px 20px -20px rgba(0,0,0,0.2);
  }
  ::-webkit-scrollbar {
    width: 8px;
  }
  ::-webkit-scrollbar-track {
    background: rgba(0,0,0,0.1);
  }
  ::-webkit-scrollbar-thumb {
    background: #c9a227;
    border-radius: 4px;
  }
  
  /* Mobile Sidebar */
  .sidebar-overlay {
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }
  .sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  .game-sidebar {
    transition: transform 0.3s ease;
  }
  @media (max-width: 768px) {
    .game-sidebar {
      position: fixed;
      top: 57px;
      left: 0;
      bottom: 0;
      z-index: 40;
      transform: translateX(-100%);
    }
    .game-sidebar.open {
      transform: translateX(0);
    }
  }
  
  /* Fate Dice Styling */
  .fate-dice {
    display: inline-flex;
    gap: 3px;
  }
  .fate-die {
    width: 20px;
    height: 20px;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 12px;
    box-shadow: inset 0 -1px 0 rgba(0,0,0,0.2);
  }
  .fate-die.plus {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
  }
  .fate-die.minus {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
  }
  .fate-die.blank {
    background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
    color: white;
  }
  .dice-result {
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }
  .dice-total {
    font-size: 0.875rem;
    font-weight: bold;
    padding: 2px 6px;
    background: #64748b;
    color: white;
    border-radius: 4px;
  }
  
  /* Etichette esito prominenti */
  .dice-outcome {
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .dice-outcome.epic {
    background: linear-gradient(135deg, #c9a227 0%, #fbbf24 100%);
    color: #1a1a2e;
    box-shadow: 0 0 8px rgba(201, 162, 39, 0.5);
  }
  .dice-outcome.success {
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    color: white;
  }
  .dice-outcome.tie {
    background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
    color: white;
  }
  .dice-outcome.failure {
    background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    color: white;
  }
  
  /* Mobile optimizations */
  @media (max-width: 640px) {
    .fate-die {
      width: 18px;
      height: 18px;
      font-size: 11px;
    }
  }
  
  /* Word wrap fix */
  .message p, .message .message-action {
    word-wrap: break-word;
    overflow-wrap: break-word;
    word-break: break-word;
    white-space: pre-wrap;
  }
</style>
